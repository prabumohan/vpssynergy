---
// Technologies component
---

<section id="technologies" class="section-padding">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="section-title">
        Technologies We Use
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        We leverage cutting-edge technologies to deliver innovative IT solutions for your business, 
        helping you stay ahead in today's rapidly evolving digital landscape.
      </p>
    </div>

    <!-- Technology Categories -->
    <div class="mb-8">
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        <button onclick="showTechCategory('all')" class="tech-filter bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition-colors">All Technologies</button>
        <button onclick="showTechCategory('web')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">Web Development</button>
        <button onclick="showTechCategory('mobile')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">Mobile Development</button>
        <button onclick="showTechCategory('cloud')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">Cloud Services</button>
        <button onclick="showTechCategory('database')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">Database</button>
        <button onclick="showTechCategory('ai')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">AI & ML</button>
        <button onclick="showTechCategory('automation')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">DevSecOps</button>
        <button onclick="showTechCategory('microsoft')" class="tech-filter bg-slate-700 text-slate-300 px-4 py-2 rounded-full hover:bg-slate-600 transition-colors">Microsoft</button>
      </div>
    </div>

    <div class="tech-grid">
      <!-- Web Development -->
      <div class="tech-category web glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Web Development</h3>
        <p class="text-slate-300 mb-4">Modern, responsive web applications built with cutting-edge frameworks</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">React</span>
          <span class="tech-tag">Next.js</span>
          <span class="tech-tag">Vue.js</span>
          <span class="tech-tag">Angular</span>
          <span class="tech-tag">Node.js</span>
          <span class="tech-tag">Express</span>
        </div>
      </div>

      <!-- Mobile Development -->
      <div class="tech-category mobile glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Mobile Development</h3>
        <p class="text-slate-300 mb-4">Cross-platform and native mobile solutions for iOS and Android</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">React Native</span>
          <span class="tech-tag">Flutter</span>
          <span class="tech-tag">iOS</span>
          <span class="tech-tag">Android</span>
          <span class="tech-tag">Xamarin</span>
          <span class="tech-tag">PWA</span>
        </div>
      </div>

      <!-- Cloud Services -->
      <div class="tech-category cloud glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Cloud Services</h3>
        <p class="text-slate-300 mb-4">Scalable cloud infrastructure and platform services</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">AWS</span>
          <span class="tech-tag">Azure</span>
          <span class="tech-tag">Google Cloud</span>
          <span class="tech-tag">Docker</span>
          <span class="tech-tag">Kubernetes</span>
          <span class="tech-tag">DevOps</span>
        </div>
      </div>

      <!-- Database -->
      <div class="tech-category database glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Database</h3>
        <p class="text-slate-300 mb-4">Robust data storage solutions for any scale of application</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">MongoDB</span>
          <span class="tech-tag">PostgreSQL</span>
          <span class="tech-tag">MySQL</span>
          <span class="tech-tag">Redis</span>
          <span class="tech-tag">Firebase</span>
          <span class="tech-tag">Oracle</span>
        </div>
      </div>

      <!-- AI & ML -->
      <div class="tech-category ai glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Artificial Intelligence (AI)</h3>
        <p class="text-slate-300 mb-4">Unlock the power of artificial intelligence to drive innovation, efficiency, and growth</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">Machine Learning</span>
          <span class="tech-tag">Deep Learning</span>
          <span class="tech-tag">NLP</span>
          <span class="tech-tag">Computer Vision</span>
          <span class="tech-tag">Predictive Analytics</span>
          <span class="tech-tag">Data Science</span>
        </div>
      </div>

      <!-- DevSecOps -->
      <div class="tech-category automation glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">DevSecOps</h3>
        <p class="text-slate-300 mb-4">Seamless integration of development, security, and operations</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">CI/CD Pipelines</span>
          <span class="tech-tag">Infrastructure as Code</span>
          <span class="tech-tag">Security Automation</span>
          <span class="tech-tag">Monitoring</span>
          <span class="tech-tag">Containerization</span>
          <span class="tech-tag">Compliance</span>
        </div>
      </div>

      <!-- Microsoft Technologies -->
      <div class="tech-category microsoft glass-card p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Microsoft Technologies</h3>
        <p class="text-slate-300 mb-4">Enterprise-grade solutions built on Microsoft's powerful ecosystem</p>
        <div class="flex flex-wrap gap-2">
          <span class="tech-tag">.NET Core</span>
          <span class="tech-tag">C#</span>
          <span class="tech-tag">Azure DevOps</span>
          <span class="tech-tag">Power Platform</span>
          <span class="tech-tag">Dynamics 365</span>
          <span class="tech-tag">SharePoint</span>
        </div>
      </div>
    </div>
  </div>
</section>