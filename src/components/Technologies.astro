---
// Technologies component
---

<section id="technologies" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Technologies We Use
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        We leverage cutting-edge technologies to deliver innovative IT solutions for your business, 
        helping you stay ahead in today's rapidly evolving digital landscape.
      </p>
    </div>

    <!-- Technology Categories -->
    <div class="mb-8">
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        <button onclick="showTechCategory('all')" class="tech-filter active px-4 py-2 rounded-full bg-blue-600 text-white hover:bg-blue-700 transition-colors">All Technologies</button>
        <button onclick="showTechCategory('web')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">Web Development</button>
        <button onclick="showTechCategory('mobile')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">Mobile Development</button>
        <button onclick="showTechCategory('cloud')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">Cloud Services</button>
        <button onclick="showTechCategory('database')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">Database</button>
        <button onclick="showTechCategory('ai')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">AI & ML</button>
        <button onclick="showTechCategory('automation')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">DevSecOps</button>
        <button onclick="showTechCategory('microsoft')" class="tech-filter px-4 py-2 rounded-full bg-slate-700 text-slate-300 hover:bg-slate-600 transition-colors">Microsoft</button>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Web Development -->
      <div class="tech-category web glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Web Development</h3>
        <p class="text-slate-300 mb-4">Modern, responsive web applications built with cutting-edge frameworks</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">React</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Next.js</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Vue.js</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Angular</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Node.js</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Express</span>
        </div>
      </div>

      <!-- Mobile Development -->
      <div class="tech-category mobile glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Mobile Development</h3>
        <p class="text-slate-300 mb-4">Cross-platform and native mobile solutions for iOS and Android</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">React Native</span>
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">Flutter</span>
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">iOS</span>
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">Android</span>
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">Xamarin</span>
          <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm border border-green-500/30">PWA</span>
        </div>
      </div>

      <!-- Cloud Services -->
      <div class="tech-category cloud glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Cloud Services</h3>
        <p class="text-slate-300 mb-4">Scalable cloud infrastructure and platform services</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">AWS</span>
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">Azure</span>
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">Google Cloud</span>
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">Docker</span>
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">Kubernetes</span>
          <span class="bg-purple-500/20 text-purple-400 px-3 py-1 rounded-full text-sm border border-purple-500/30">DevOps</span>
        </div>
      </div>

      <!-- Database -->
      <div class="tech-category database glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Database</h3>
        <p class="text-slate-300 mb-4">Robust data storage solutions for any scale of application</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">MongoDB</span>
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">PostgreSQL</span>
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">MySQL</span>
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">Redis</span>
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">Firebase</span>
          <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm border border-orange-500/30">Oracle</span>
        </div>
      </div>

      <!-- AI & ML -->
      <div class="tech-category ai glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Artificial Intelligence (AI)</h3>
        <p class="text-slate-300 mb-4">Unlock the power of artificial intelligence to drive innovation, efficiency, and growth</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">Machine Learning</span>
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">Deep Learning</span>
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">NLP</span>
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">Computer Vision</span>
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">Predictive Analytics</span>
          <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm border border-red-500/30">Data Science</span>
        </div>
      </div>

      <!-- DevSecOps -->
      <div class="tech-category automation glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">DevSecOps</h3>
        <p class="text-slate-300 mb-4">Seamless integration of development, security, and operations</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">CI/CD Pipelines</span>
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">Infrastructure as Code</span>
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">Security Automation</span>
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">Monitoring</span>
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">Containerization</span>
          <span class="bg-gray-500/20 text-gray-400 px-3 py-1 rounded-full text-sm border border-gray-500/30">Compliance</span>
        </div>
      </div>

      <!-- Microsoft Technologies -->
      <div class="tech-category microsoft glass-effect rounded-xl p-6 hover-glow transition-all duration-300">
        <h3 class="text-lg font-semibold text-white mb-4">Microsoft Technologies</h3>
        <p class="text-slate-300 mb-4">Enterprise-grade solutions built on Microsoft's powerful ecosystem</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">.NET Core</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">C#</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Azure DevOps</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Power Platform</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">Dynamics 365</span>
          <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-500/30">SharePoint</span>
        </div>
      </div>
    </div>
  </div>
</section>
