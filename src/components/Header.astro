---
// Header component
---

<header class="glass-effect sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="#" class="text-2xl font-bold text-gradient flex items-center space-x-3">
          <div class="relative">
            <!-- Custom Tech Logo -->
            <svg class="w-10 h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- Background Circle -->
              <circle cx="20" cy="20" r="18" fill="url(#logoGradient)" stroke="url(#logoBorder)" stroke-width="2"/>
              
              <!-- Tech Circuit Pattern -->
              <g stroke="white" stroke-width="1.5" fill="none" opacity="0.8">
                <!-- Central Hub -->
                <circle cx="20" cy="20" r="3" fill="white"/>
                
                <!-- Circuit Lines -->
                <line x1="20" y1="8" x2="20" y2="17"/>
                <line x1="20" y1="23" x2="20" y2="32"/>
                <line x1="8" y1="20" x2="17" y2="20"/>
                <line x1="23" y1="20" x2="32" y2="20"/>
                
                <!-- Diagonal Connections -->
                <line x1="12" y1="12" x2="17" y2="17"/>
                <line x1="28" y1="12" x2="23" y2="17"/>
                <line x1="12" y1="28" x2="17" y2="23"/>
                <line x1="28" y1="28" x2="23" y2="23"/>
                
                <!-- Connection Nodes -->
                <circle cx="20" cy="8" r="1.5" fill="white"/>
                <circle cx="20" cy="32" r="1.5" fill="white"/>
                <circle cx="8" cy="20" r="1.5" fill="white"/>
                <circle cx="32" cy="20" r="1.5" fill="white"/>
                <circle cx="12" cy="12" r="1" fill="white"/>
                <circle cx="28" cy="12" r="1" fill="white"/>
                <circle cx="12" cy="28" r="1" fill="white"/>
                <circle cx="28" cy="28" r="1" fill="white"/>
              </g>
              
              <!-- Data Flow Animation -->
              <circle cx="20" cy="8" r="0.5" fill="#00ff88">
                <animate attributeName="opacity" values="0;1;0" dur="2s" repeatCount="indefinite"/>
              </circle>
              <circle cx="20" cy="32" r="0.5" fill="#00ff88">
                <animate attributeName="opacity" values="0;1;0" dur="2s" begin="0.5s" repeatCount="indefinite"/>
              </circle>
              <circle cx="8" cy="20" r="0.5" fill="#00ff88">
                <animate attributeName="opacity" values="0;1;0" dur="2s" begin="1s" repeatCount="indefinite"/>
              </circle>
              <circle cx="32" cy="20" r="0.5" fill="#00ff88">
                <animate attributeName="opacity" values="0;1;0" dur="2s" begin="1.5s" repeatCount="indefinite"/>
              </circle>
              
              <!-- Gradients -->
              <defs>
                <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
                  <stop offset="50%" style="stop-color:#8b5cf6;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" />
                </linearGradient>
                <linearGradient id="logoBorder" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#34d399;stop-opacity:1" />
                </linearGradient>
              </defs>
            </svg>
            
            <!-- Status Indicator -->
            <div class="absolute -top-1 -right-1 w-3 h-3 bg-green-400 rounded-full pulse-animation"></div>
          </div>
          
          <!-- Company Name -->
          <div class="flex flex-col">
            <span class="text-lg font-medium leading-none">VPS</span> 
            <span class="text-3xl font-bold leading-none">Synergy</span>
          </div>
        </a>
      </div>
      <nav class="hidden md:flex space-x-8">
        <a href="#home" class="text-slate-300 hover:text-blue-400 transition-colors duration-300">Home</a>
        <a href="#services" class="text-slate-300 hover:text-blue-400 transition-colors duration-300">Services</a>
        <a href="#technologies" class="text-slate-300 hover:text-blue-400 transition-colors duration-300">Technologies</a>
        <a href="#about" class="text-slate-300 hover:text-blue-400 transition-colors duration-300">About</a>
        <a href="#contact" class="text-slate-300 hover:text-blue-400 transition-colors duration-300">Contact</a>
      </nav>
      <div class="hidden md:flex items-center space-x-4">
        <a href="#contact" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 hover-glow">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button onclick="toggleMobileMenu()" class="text-slate-300 hover:text-blue-400 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-slate-800 border-t border-slate-700">
        <a href="#home" class="block px-3 py-2 text-slate-300 hover:text-blue-400">Home</a>
        <a href="#services" class="block px-3 py-2 text-slate-300 hover:text-blue-400">Services</a>
        <a href="#technologies" class="block px-3 py-2 text-slate-300 hover:text-blue-400">Technologies</a>
        <a href="#about" class="block px-3 py-2 text-slate-300 hover:text-blue-400">About</a>
        <a href="#contact" class="block px-3 py-2 text-slate-300 hover:text-blue-400">Contact</a>
        <div class="border-t border-slate-700 pt-3 mt-3">
          <a href="#contact" class="block px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-center rounded-lg">Get Started</a>
        </div>
      </div>
    </div>
  </div>
</header>
