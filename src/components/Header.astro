---
// Header component
---

<header class="glass-card sticky top-0 z-50 mx-4 mt-4">
  <div class="container">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center space-x-3">
        <div class="logo-icon">VS</div>
        <div class="flex flex-col">
          <span class="text-lg font-medium leading-none">VPS</span> 
          <span class="text-2xl font-bold leading-none gradient-text">Synergy</span>
        </div>
      </div>
      
      <nav class="desktop-nav hidden md:flex space-x-8">
        <a href="#home" class="nav-link">Home</a>
        <a href="#services" class="nav-link">Services</a>
        <a href="#technologies" class="nav-link">Technologies</a>
        <a href="#about" class="nav-link">About</a>
        <a href="#contact" class="nav-link">Contact</a>
      </nav>
      
      <div class="hidden md:flex items-center space-x-4">
        <a href="#contact" class="btn-primary">Get Started</a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button onclick="toggleMobileMenu()" class="text-slate-300 hover:text-blue-400 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-slate-800 border-t border-slate-700 rounded-b-lg">
        <a href="#home" class="block px-3 py-2 nav-link">Home</a>
        <a href="#services" class="block px-3 py-2 nav-link">Services</a>
        <a href="#technologies" class="block px-3 py-2 nav-link">Technologies</a>
        <a href="#about" class="block px-3 py-2 nav-link">About</a>
        <a href="#contact" class="block px-3 py-2 nav-link">Contact</a>
        <div class="border-t border-slate-700 pt-3 mt-3">
          <a href="#contact" class="block px-3 py-2 btn-primary text-center">Get Started</a>
        </div>
      </div>
    </div>
  </div>
</header>